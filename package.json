{
  "name": "password-tools",
  "version": "2.0.0",
  "description": "Cryptographically secure password and passphrase generation utilities with strength analysis",
  "type": "module",
  "private": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "build:all": "./build-all.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:all": "./test-all.sh",
    "coverage:all": "./generate-coverage.sh",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "demo": "npm run build && python3 -m http.server 8000",
    "demo:1": "npm run build && node examples/demo-breach-checker.js",
    "prepublishOnly": "vitest run --exclude tests/unicode.test.ts && npm run build"
  },
  "keywords": [
    "password",
    "generator",
    "security",
    "passphrase",
    "diceware",
    "strength",
    "entropy",
    "zxcvbn",
    "cryptography",
    "authentication"
  ],
  "author": "TrustVault",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iAn-P1nt0/password-tools.git"
  },
  "bugs": {
    "url": "https://github.com/iAn-P1nt0/password-tools/issues"
  },
  "homepage": "https://github.com/iAn-P1nt0/password-tools#readme",
  "dependencies": {
    "@noble/hashes": "^1.5.0",
    "argon2-browser": "^1.18.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.10.1",
    "@types/zxcvbn": "^4.4.5",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.15.0",
    "jsdom": "^27.2.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
