{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "WebWorker"],
    
    /* Modules */
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    
    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    
    /* Interop Constraints */
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Type Checking - Strict Mode */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    
    /* Advanced Security */
    "skipLibCheck": true,
    "useDefineForClassFields": true
  },
  "include": ["src/generators/**/*", "src/analyzer/**/*", "src/utils.ts", "src/index.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/__tests__", "src/components", "src/core", "src/data", "src/domain", "src/features", "src/hooks", "src/presentation", "src/styles", "src/test", "src/types", "src/assets", "src/main.tsx"]
}
